<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="5dp"
        android:paddingVertical="8dp"
        android:background="@drawable/bottoms_maintenance_header"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Maintenance History"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            app:tint="#4F4F4F"
            android:src="@drawable/ic_navigation_down"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/no_history_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No maintenance history"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:gravity="center"
        android:paddingVertical="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/maintenance_recycle_view"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="5dp"
        android:paddingBottom="10dp"
        tools:listitem="@layout/maintenance_holder"
        android:layout_height="wrap_content"/>
</LinearLayout>